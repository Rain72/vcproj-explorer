{
	"name": "vcproj-explorer",
	"displayName": "Vcproj Explorer",
	"publisher": "Rain72",
	"repository": "https://github.com/Rain72/vcproj-explorer/",
	"description": "VSCode extension for opening VS2008 project",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/*.vcproj"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vcprojExplorer.openVcproj",
				"title": "Open Vcproj"
			},
			{
				"command": "vcprojExplorer.openFile",
				"title": "Open File"
			},
			{
				"command": "vcprojExplorer.goInto",
				"title": "Go Into"
			},
			{
				"command": "vcprojExplorer.goHome",
				"title": "Home"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "vcprojView",
					"name": "Vcproj-View",
					"when": "vcprojView.enable"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "vcprojView",
				"contents": "Please open the \"vcproj\" file.\n[Open .vcproj](command:vcprojExplorer.openVcproj)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "vcprojExplorer.goHome",
					"when": "view == vcprojView && vcprojView.goInto",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vcprojExplorer.goInto",
					"when": "viewItem == FILTER",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Vcproj-Explorer",
			"properties": {
				"vcprojexplorer.file": {
					"type": "string",
					"default": "",
					"description": ".vcproj File Path"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/underscore": "^1.10.2",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"fast-xml-parser": "^3.17.4",
		"underscore": "^1.10.2"
	}
}
